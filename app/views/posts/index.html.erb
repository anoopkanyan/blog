<% set_meta_tags title: 'Latest Posts',
                 description: 'Recent viral posts and news. ',
                 keywords: 'viral, content, posts, news, latest, entertainment, memes, read, blog, tech, tech news, videos, music  ', 
                 reverse: true %>

<h1 id="page_title"> Stuff We've Written </h1>

<div id="posts_wrapper" class="skinny_wrapper">
	<% @posts.each do |post| %>
	<div class="post">
		<p class="date"><%= post.created_at.strftime('%A, %B %d') %></p>
		<h2><a href="#"><%= link_to post.title, post %></a></h2>
		<hr>
	</div>
	<% end %>
	
	<%= will_paginate @posts %>
</div>