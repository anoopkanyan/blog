        <a href="https://twitter.com/chewtab"><i class="fa fa-twitter" aria-hidden="true"></i></a>
      <!--  <a href=""><i class="fa fa-github" aria-hidden="true"></i></a> -->
        <a href="https://www.instagram.com/chewtab/"><i class="fa fa-instagram" aria-hidden="true"></i></a>
      </nav>
    </footer>
