<% set_meta_tags title: 'Home',
                 description: 'Latest entertainment, tech, sports news and viral content. All the information on what\'s happeing in the world right now. Latest trends, news and content.',
                 keywords: 'entertainment, tech, sports, news, viral, content, trend, information, latest, trending' ,
                 reverse: true %>

<div class="clearfix">

<div id="main_grid"  class="col-1 homepage_content">
<h2>Latest Stories</h2> 
<hr>
<% @posts.each do |post| %>
  <div class="grid-item">
    <%= link_to (image_tag post.image.url(:main)), post %>
    <h3>
      <%= link_to post.title, post %>
    </h3>
    <p class="date">
    <%= post.created_at.strftime('%A, %B %d') %>
    </p>
  </div>
 <% end %> 
</div>

<div class="col-2 homepage_content">
  <h2>Trending Videos</h2>  
  <hr>
  <% @posts.each do |post| %>
  <% if !(post.youtube_url.nil?) %>
  <p><%= raw(youtube_embed_main(post.youtube_url)) %></p>
  <h3><a href="#"><%= link_to post.title, post %></a></h3>
  <p class="date"><%= post.created_at.strftime("%A, %b %d") %></p>  
  <% end %>
  <% end %>
</div>

<div class="col-3 homepage_content" >
  <h2>Trending</h2>  
  <hr>
  <% @trending.each do |trending| %>
  <h3><a href="#"><%= link_to trending.title, trending %></a></h3>
  <p class="date"><%= trending.created_at.strftime("%A, %b %d") %></p> 
  <% end %>
</div>

			
</div>